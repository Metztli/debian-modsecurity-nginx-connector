#!/bin/sh
set -e

# Read libnginx-mod-http-lua architectures from debian/control
lua_archs=$(grep-dctrl -P libnginx-mod-http-lua --show-field=Architecture --no-field-names debian/control)

for arch in $lua_archs; do
	if dpkg-architecture --is "$arch"; then
		echo "build-mod-http-lua"
		exit 0
	fi
done

echo "skip-mod-http-lua"
